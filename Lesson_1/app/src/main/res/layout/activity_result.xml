<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <ImageView
        android:id="@+id/iv_result_homework_8"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="top|center"/>

    <TextView
        android:id="@+id/tv_result_homework_8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="220dp"
        android:gravity="center"
        android:textSize="22sp"
        android:textColor="#005eff"
        android:background="#ffb7dd"/>



    <Button
        android:id="@+id/button_log_out_homework_8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:textColor="#005eff"
        android:text="ВЫЙТИ"
        android:layout_gravity="bottom"/>

    <ProgressBar
        android:id="@+id/progressBar_log_out_homework_8"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="195dp"
        android:visibility="invisible"
        android:layout_gravity="center_horizontal|bottom"
        />

</FrameLayout>
