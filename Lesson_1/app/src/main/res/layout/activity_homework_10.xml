<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_blu"
    android:padding="10dp">


    <Button
        android:id="@+id/btn_dialog_about"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/btn_selector"
        android:text="Dialog About"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="18dp" />

    <Button
        android:id="@+id/btn_dialog_settings"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@+id/btn_dialog_about"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="43dp"
        android:background="@drawable/btn_selector"
        android:text="Dialog Settings"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="18dp" />

    <Button
        android:id="@+id/btn_dialog_rate"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/btn_dialog_settings"
        android:layout_alignStart="@+id/btn_dialog_settings"
        android:layout_below="@+id/btn_dialog_settings"
        android:layout_marginTop="43dp"
        android:background="@drawable/btn_selector"
        android:text="Dialog Rate"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="18dp" />

    <Button
        android:id="@+id/btn_date_piker_dialog"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@+id/btn_dialog_rate"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="42dp"
        android:background="@drawable/btn_selector"
        android:text="DatePiker Dialog"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/tvDialogs"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="44dp" />

    <Button
        android:id="@+id/btn_time_piker_dialog"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="@drawable/btn_selector"
        android:text="TimePiker Dialog"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="18dp"
        android:layout_below="@+id/btn_date_piker_dialog"
        android:layout_alignLeft="@+id/btn_date_piker_dialog"
        android:layout_alignStart="@+id/btn_date_piker_dialog"
        android:layout_marginTop="46dp"/>

</RelativeLayout>
