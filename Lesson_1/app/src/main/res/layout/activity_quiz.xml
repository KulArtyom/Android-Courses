<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/new_bg"
    android:padding="5dp">


    <TextView
        android:id="@+id/tv_text"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="155dp"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_marginBottom="5dp"
        android:text="@string/tv_quiz_text"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/btn_true"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/tv_text"
        android:layout_alignStart="@+id/tv_text"
        android:layout_below="@+id/tv_text"
        android:layout_marginLeft="82dp"
        android:layout_marginStart="82dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/rounded_btn_without_color"
        android:text="@string/true_btn"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btn_false"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_below="@+id/tv_text"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/btn_true"
        android:layout_toRightOf="@+id/btn_true"
        android:background="@drawable/rounded_btn_without_color"
        android:text="@string/false_btn"
        android:textAllCaps="false" />


</RelativeLayout>
